{% from '../button/button.njk' import button %}

<div class="popup" data-popup="activity-edit">
  <div class="popup__box flex flex-col" data-popup-box>
    <button class="popup__close" data-popup-close>
      <img width="32" height="32" src="/close.png" alt="" />
    </button>
    <div class="popup__box-inner h-full flex flex-grow flex-col items-center">
      <h2 class="popup__title">
        Edit Activity
      </h2>
      <div>
        <form action="">
          <div class="activity-edit-popup__input-container">
            <label class="activity-edit-popup__label" for="id">id</label>
            <input class="activity-edit-popup__input"
              id="id"
              type="text"
              name="id" />
          </div>
          <div class="activity-edit-popup__input-container">
            <label class="activity-edit-popup__label" for="name">
              activity name
            </label>
            <input class="activity-edit-popup__input"
              id="name"
              type="text"
              name="name" />
          </div>
          <div class="activity-edit-popup__input-container">
            <label class="activity-edit-popup__label" for="description">
              number of sessions
            </label>
            <input class="activity-edit-popup__input"
              id="description"
              type="text"
              name="description" />
          </div>
        </form>
      </div>
      <div class="popup__buttons flex justify-center space-x-5">
        {{
          button({
            children: 'Cancel',
            className: 'popup__button _cancel',
            attributes: 'data-popup-close'
          })
        }}
        {{
          button({
            children: 'Save',
            className: 'popup__button'
          })
        }}
      </div>
    </div>
  </div>
</div>
