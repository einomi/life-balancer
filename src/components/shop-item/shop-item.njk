{% from '../tooltip/tooltip.njk' import tooltip %}

{% macro shopItem(props) %}
  <button class="shop-item"
    data-shop-item
    data-id="{{ props.id }}"
    data-price="{{ props.price }}">
    <img class="shop-item__image" src="/shop/{{ props.id }}.png" alt="" />
    {{ tooltip(props) }}
  </button>
{% endmacro %}
